<ExampleHeader Component="typeof(DateField<DateTime>)" Example="@GetType()" />

<EditForm Model="model" OnValidSubmit="HandleValidSubmit">
    <DateField @bind-Value="model.CreatedAt"></DateField>
</EditForm>
<p>The current value is: @model.CreatedAt.LocalDateTime.ToShortDateString()</p>

@code{
    private EditModel model = new EditModel();
    public class EditModel
    {
        public DateTimeOffset CreatedAt { get; set; } = DateTime.UtcNow;
    }
    private void HandleValidSubmit()
    {
        Console.WriteLine($"Value of the model is: {model.CreatedAt.UtcDateTime}");
    }
}