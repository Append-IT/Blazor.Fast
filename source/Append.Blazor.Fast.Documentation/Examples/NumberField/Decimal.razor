<ExampleHeader Component="typeof(NumberField<decimal>)" Example="@GetType()" />

<EditForm Model="model" OnValidSubmit="HandleValidSubmit">
    <NumberField @bind-Value="model.Amount"></NumberField>
</EditForm>
<p>The current value is: @model.Amount</p>

@code{
    private EditModel model = new EditModel();
    public class EditModel
    {
        public decimal Amount { get; set; }
    }
    private void HandleValidSubmit()
    {
        Console.WriteLine($"Value of the model is: {model.Amount}");
    }
}