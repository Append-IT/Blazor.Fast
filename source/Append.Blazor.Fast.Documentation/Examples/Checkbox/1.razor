<ComponentHeader Title="Default"
                 ExampleUrl="https://github.com/Append-IT/Blazor.Fast/blob/master/source/Append.Blazor.Fast.Documentation/Examples/Checkbox/1.razor" />
<EditForm Model="model" OnValidSubmit="HandleValidSubmit">
    <Checkbox @bind-Value="model.IsChecked">Checkbox</Checkbox>
    <Button type="submit" appearance="primary">Submit</Button>
</EditForm>

@code{
    private EditModel model = new EditModel();
    public class EditModel
    {
        public bool IsChecked { get; set; } = true;
    }
    private void HandleValidSubmit()
    {
        Console.WriteLine($"Value of the model is: {model.IsChecked}");
    }
}