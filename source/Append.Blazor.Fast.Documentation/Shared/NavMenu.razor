@inject NavigationManager NavigationManager
<Treeview>
    <NavComponent ChildComponent="typeof(TreeItem)" href="https://benjaminvertonghen.medium.com/blazor-fast-webcomponents-4bae55d005ad">Introduction</NavComponent>
    <NavComponent ChildComponent="typeof(TreeItem)" href="getting-started">Getting Started</NavComponent>
    <TreeItem @onclick="ToggleBasicComponents" expanded=@(areBasicComponentsShown ? "true" : null)>
        Basic Components
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/accordion">Accordion</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/anchor">Anchor</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/badge">Badge</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/button">Button</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/breadcrumb">Breadcrumb</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/card">Card</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/dialog">Dialog</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/divider">Divider</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/flipper">Flipper</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/menu">Menu</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/progress-ring" Match="NavLinkMatch.All">Progress Ring</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/progress" Match="NavLinkMatch.All">Progress Linear</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/skeleton">Skeleton</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/tabs">Tabs</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/tooltip">Tooltip</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/treeview">Tree View</NavComponent>
    </TreeItem>
    <TreeItem @onclick="ToggleFormComponents" expanded=@(areFormComponentsShown ? "true" : null)>
        Form Components
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/textfield">Text Field</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/textarea">Text Area</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/numberfield">Number Field</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/datefield">Date Field</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/checkbox">Checkbox <Badge>Bug</Badge></NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/switch">Switch <Badge>Bug</Badge></NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" href="components/slider">Slider</NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" disabled href="components/radio">Radio <Badge>Soon</Badge></NavComponent>
        <NavComponent ChildComponent="typeof(TreeItem)" disabled href="components/radio-group">Radio Group <Badge>Soon</Badge></NavComponent>
    </TreeItem>
</Treeview>

@code{
    private bool areFormComponentsShown;
    private void ToggleFormComponents() => areFormComponentsShown = !areFormComponentsShown;
    private bool areBasicComponentsShown;
    private void ToggleBasicComponents() => areBasicComponentsShown = !areBasicComponentsShown;
}